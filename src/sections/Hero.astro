---
import Countdown from '../components/Countdown';
---

<section id="hero" class="min-h-[100dvh] flex flex-col items-center justify-center relative px-6 overflow-hidden">
	<div class="text-center space-y-4 z-10">
		<h2 id="hero-name" class="text-6xl md:text-9xl text-silver opacity-0 transform -translate-y-10 shiny-text py-4">
			Mis 15 Años
		</h2>
		
		<div id="hero-date-box" class="opacity-0 scale-95 transition-all duration-1000">
			<p class="text-lg md:text-2xl font-light tracking-[0.5em] uppercase text-silver/80 mt-6">
				Sábado 24 de Enero
			</p>
			<div class="h-[1px] w-24 bg-white/20 mx-auto mt-4"></div>
		</div>

		<Countdown client:load />

		<div id="scroll-hint" class="absolute bottom-12 left-1/2 -translate-x-1/2 opacity-0">
			<div class="flex flex-col items-center gap-2">
				<span class="text-[10px] uppercase tracking-[0.3em] text-silver/40">Desliza</span>
				<div class="w-[1px] h-12 bg-gradient-to-b from-white/40 to-transparent"></div>
			</div>
		</div>
	</div>


	<!-- Nube Izquierda -->
	<div class="absolute bottom-[-5%] -left-[10%] w-[350px] md:w-[600px] h-auto pointer-events-none opacity-90 z-20">
		<img id="cloud-left" src="/cloud-left.png" alt="" class="w-full h-auto object-contain" />
	</div>

	<!-- Nube Derecha -->
	<div class="absolute bottom-[-10%] -right-[5%] w-[400px] md:w-[700px] h-auto pointer-events-none opacity-90 z-20">
		<img id="cloud-right" src="/cloud-right.png" alt="" class="w-full h-auto object-contain" />
	</div>
</section>

<script>
	import { gsap } from 'gsap';

	window.addEventListener('welcome-complete', () => {
		const tl = gsap.timeline();

		tl.to("#hero-name", { opacity: 1, y: 0, duration: 2, ease: "power4.out" })
		  .to("#hero-date-box", { opacity: 1, scale: 1, duration: 1.5, ease: "power3.out" }, "-=1.5")
		  .to("#countdown-container", { opacity: 1, y: 0, duration: 1.2, ease: "power2.out" }, "-=1")
		  .to("#scroll-hint", { opacity: 1, y: 0, duration: 1, delay: 0.5 });
		
		// Animación sutil de las nubes (flotando)
		gsap.to("#cloud-left", {
			y: -20,
			x: 10,
			duration: 6,
			repeat: -1,
			yoyo: true,
			ease: "sine.inOut"
		});

		gsap.to("#cloud-right", {
			y: -30,
			x: -15,
			duration: 8,
			repeat: -1,
			yoyo: true,
			ease: "sine.inOut",
			delay: 1
		});
	});
</script>

<style>
	h2 {
		font-family: 'Great Vibes', cursive;
		text-shadow: 0 0 40px rgba(255, 255, 255, 0.05);
	}
</style>
